@page
@model Hospital.Pages.DoctorsModel

<h1>Doctors</h1>

<!-- List of Doctors -->
<h2>Doctor List</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Contact</th>
            <th>Specialization ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var doctor in Model.Doctors)
        {
            <tr>
                <td>@doctor.Id</td>
                <td>@doctor.Name</td>
                <td>@doctor.Surname</td>
                <td>@doctor.Contact</td>
                <td>@doctor.SpecializationId</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@doctor.Id">
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Create or Update Doctor Form -->
<h2>@(Model.Doctor.Id == 0 ? "Create Doctor" : "Update Doctor")</h2>
<form method="post" asp-page-handler="@(Model.Doctor.Id == 0 ? "Create" : "Update")" asp-route-id="@Model.Doctor.Id">
    <input type="hidden" asp-for="Doctor.Id" />
    <div>
        <label asp-for="Doctor.Name"></label>
        <input asp-for="Doctor.Name" />
        <span asp-validation-for="Doctor.Name"></span>
    </div>
    <div>
        <label asp-for="Doctor.Surname"></label>
        <input asp-for="Doctor.Surname" />
        <span asp-validation-for="Doctor.Surname"></span>
    </div>
    <div>
        <label asp-for="Doctor.Contact"></label>
        <input asp-for="Doctor.Contact" />
        <span asp-validation-for="Doctor.Contact"></span>
    </div>
    <div>
        <label asp-for="Doctor.Password"></label>
        <input asp-for="Doctor.Password" type="password" />
        <span asp-validation-for="Doctor.Password"></span>
    </div>
    <div>
        <label asp-for="Doctor.SpecializationId"></label>
        <input asp-for="Doctor.SpecializationId" />
        <span asp-validation-for="Doctor.SpecializationId"></span>
    </div>
    <button type="submit">@(Model.Doctor.Id == 0 ? "Create" : "Update")</button>
</form>
