@page
@model Hosipital.Pages.PatientsModel
@{
    ViewData["Title"] = "Patients";
}

<h1>Patients</h1>

<!-- Filter by Name -->

            <th>SORT BY : </th>
            <th>
                <a asp-page-handler="OnGetAsync" asp-route-sortBy="@(Model.SortBy == "Name" ? "Name_Desc" : "Name")">Name</a>
            </th>
            <th>
                <a asp-page-handler="OnGetAsync" asp-route-sortBy="@(Model.SortBy == "Surname" ? "Surname_Desc" : "Surname")">Surname</a>
            </th>
<form method="get">
    <div class="form-group">
        <label>Filter Patients</label>
        <input type="text" name="filterBy" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

<!-- Patient List -->
<h2>Patient List</h2>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                <a asp-page-handler="OnGetAsync" asp-route-sortBy="@(Model.SortBy == "Name" ? "Name_Desc" : "Name")">Name</a>
            </th>
            <th>
                <a asp-page-handler="OnGetAsync" asp-route-sortBy="@(Model.SortBy == "Surname" ? "Surname_Desc" : "Surname")">Surname</a>
            </th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model.Patients)
        {
            <tr>
                <td>@patient.Id</td>
                <td>@patient.Name</td>
                <td>@patient.Surname</td>
                <td>@patient.Contact</td>
                <td>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@patient.Id">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Create or Update Patient Form -->
<h2>@(Model.NewPatient.Id == 0 ? "Create Patient" : "Update Patient")</h2>
<form method="post" asp-page-handler="@(Model.NewPatient.Id == 0 ? "Create" : "Update")" asp-route-id="@Model.NewPatient.Id">
    <input type="text" asp-for="NewPatient.Id" />
    <div class="form-group">
        <label asp-for="NewPatient.Name"></label>
        <input asp-for="NewPatient.Name" class="form-control" />
        <span asp-validation-for="NewPatient.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPatient.Surname"></label>
        <input asp-for="NewPatient.Surname" class="form-control" />
        <span asp-validation-for="NewPatient.Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPatient.Contact"></label>
        <input asp-for="NewPatient.Contact" class="form-control" />
        <span asp-validation-for="NewPatient.Contact" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPatient.Password"></label>
        <input asp-for="NewPatient.Password" type="password" class="form-control" />
        <span asp-validation-for="NewPatient.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@(Model.NewPatient.Id == 0 ? "Create" : "Update")</button>
</form>
